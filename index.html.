    <h2>ðŸ“° Noticias de Cine</h2>
    <div id="news-container" class="news">
      Cargando noticias...
    </div>
  </section>

  <script>
    async function loadNews() {
      const rssUrl = 'https://www.sensacine.com/feeds/news.xml';
      const apiUrl = 'https://api.rss2json.com/v1/api.json?rss_url=' + encodeURIComponent(rssUrl);
      try {
        const response = await fetch(apiUrl);
        const data = await response.json();
        const container = document.getElementById('news-container');
        container.innerHTML = "";
        data.items.slice(0, 5).forEach(item => {
          const article = document.createElement('div');
          article.innerHTML = `<h3><a href="${item.link}" target="_blank">${item.title}</a></h3>
            <p>${item.pubDate}</p><p>${item.description}</p>`;
          container.appendChild(article);
        });
      } catch (error) {
        document.getElementById('news-container').innerText = "No se pudieron cargar las noticias.";
      }
    }

    loadNews();
  </script>
